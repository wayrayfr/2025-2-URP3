====\n","def preprocess_spectra_als_only(df, label_col='label'):\n","    \"\"\"\n","    Version ALS-only:\n","    - smoothing 없음\n","    - SNV 없음\n","    - MSC 없음\n","    - ALS baseline correction만 적용\n","    \"\"\"\n","    y = df[label_col].values\n","    X = df.drop(columns=[label_col]).values.astype(float)\n","\n","    n_samples, n_features = X.shape\n","    print(f\"[ALS] 원본 스펙트럼 크기: {X.shape}\")\n","\n","    X_proc = np.zeros_like(X)\n","    for i in range(n_samples):\n","        spec = X[i, :]\n","\n","        # baseline만 빼기\n","        baseline = als_baseline_soft(spec, lam=1e3, p=0.001, niter=5)\n","        spec_bc = spec - baseline\n","\n","        X_proc[i, :] = spec_bc\n","\n","    return X_proc, y\n","\n","\n","# ==== 실행: ALS 전처리 + CSV 저장 ====\n","df = pd.read_csv(input_path)\n","X_als, y_als = preprocess_spectra_als_only(df, label_col='label')\n","\n","spec_cols = df.drop(columns=['label']).columns\n","df_als = pd.DataFrame(X_als, columns=spec_cols)\n","df_als.insert(0, 'label', y_als)\n","\n","df_als.to_csv(output_path_als, index=False)\n","print(f\"[ALS] 전처리된 CSV 저장 완료: {output_path_als}\")\n"]}]}